<!doctype html>
<html lang="en">
<head>
    <title>{{title}} Deets</title>
</head>
    <body>
        <h2>Details for {{title}}</h2>
        {{#if item}}
        <ul>
            <li>Title: {{ item.title }}
            <li>Author: {{ item.author }}
            <li>Price: {{ item.price }}
        </ul>
        <input type="button" onclick="location.href='delete?title={{title}}';" value="Delete" />

        {{else}}
        not found
        {{/if}}
    </body>
</html> 